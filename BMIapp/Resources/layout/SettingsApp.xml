<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EEEEEE">

    
    <ImageButton
        android:layout_width="358dp"
        android:layout_height="70dp"
        android:src="@drawable/aboutus"
        android:scaleType="fitCenter"
        android:background="#EEEEEE"
        android:id="@+id/imageButtonAboutUs"
        android:layout_marginTop="260dp"
        android:layout_gravity="center"/>

    <ImageButton
        android:layout_width="358dp"
        android:layout_height="70dp"
        android:src="@drawable/rateus"
        android:scaleType="fitCenter"
        android:background="#EEEEEE"
        android:id="@+id/imageButtonRateUs"
        android:layout_marginTop="15dp"
        android:layout_gravity="center"/>

    <ImageButton
        android:layout_width="358dp"
        android:layout_height="70dp"
        android:src="@drawable/signout"
        android:scaleType="fitCenter"
        android:background="#EEEEEE"
        android:id="@+id/imageButtonSignOut"
        android:layout_marginTop="15dp"
        android:layout_gravity="center"/>

<LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="185dp"
        android:orientation="horizontal"
        android:background="@android:color/white">

        <ImageButton
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:padding="2dp"
            android:src="@drawable/homebutton"
            android:id="@+id/imageButtonHome"
            android:scaleType="centerCrop"
            android:background="@android:color/white"/>

        <ImageButton
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:padding="2dp"
            android:src="@drawable/logbutton"
            android:id="@+id/imageButtonLog"
            android:scaleType="centerCrop"
            android:background="@android:color/white"/>

        <ImageButton
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="30dp"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:padding="2dp"
            android:src="@drawable/settingsButton"
            android:id="@+id/imageButtonSettings"
            android:scaleType="centerCrop"
            android:background="@android:color/white"/>

    </LinearLayout>
</LinearLayout>
