<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#EEEEEE">

    <ImageView
        android:layout_width="284dp"
        android:layout_height="201dp"
        android:layout_gravity="center"
        android:layout_marginTop="106dp"
        android:src="@drawable/logo"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_gravity="center"
        android:text="Let's help you get better!!"
        android:textSize="20dp"
        android:gravity="center"
        android:layout_marginTop="36dp"
    android:textColor="#000000"/>

<TextView
        android:layout_width="332dp"
        android:layout_height="123dp"
        android:layout_gravity="center"
        android:text="This app can you calculate your body mass index (BMI). Your BMI can help you determine if you are at a healthy weight, or if you need to make changes to your diet or exercise habits."
        android:textSize="15dp"
        android:gravity="center"
        android:layout_marginTop="35dp"
        android:layout_marginBottom="15dp"
        android:textColor="#000000"/>

    <Button
        android:layout_width="338dp"
        android:layout_height="75dp"
        android:layout_gravity="center"
        android:id="@+id/btnGetStarted"
        android:text="Sign In"
        android:textSize="20dp"
        android:layout_marginTop="30dp"
        android:textAllCaps="false"
        style="@style/RoundedButton"/>

    <Button
        android:layout_width="338dp"
        android:layout_height="75dp"
        android:layout_gravity="center"
        android:id="@+id/btnSignUp"
        android:text="Create an Account"
        android:textColor="#C62FF8"
        android:textSize="20dp"
        android:layout_marginTop="8dp"
        android:textAllCaps="false"
        style="@style/RoundedButton2"
        />
        
</LinearLayout>